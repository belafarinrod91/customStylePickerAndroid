<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

   <LinearLayout
       android:id="@+id/linearLayoutForPicker"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:orientation="vertical"
       android:paddingTop="10dp" >

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingBottom="5dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/ivCenterMin2"
                android:layout_width="20dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_launcher"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/centerMin2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="TextView" />

        </LinearLayout>
        
       
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingBottom="5dp" >

            <ImageView
                android:id="@+id/ivCenterMin1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_launcher"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/centerMin1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:text="TextView" />

        </LinearLayout>
       
       
       
        <View
            android:id="@+id/separatorAbove"
            style="@style/divider"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:paddingTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:id="@+id/ivCenter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_launcher"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:text="TextView" />

        </LinearLayout>
         
        <View
            android:id="@+id/separatorBelow"
            style="@style/divider"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="8dp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingBottom="5dp" > >

            <ImageView
                android:id="@+id/ivCenter1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_launcher"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/center1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:text="TextView" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingBottom="5dp" > 

            <ImageView
                android:id="@+id/ivCenter2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_launcher"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/center2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:text="TextView" />

        </LinearLayout>

    </LinearLayout>
 
</RelativeLayout>